	<h1><center>Latest Listings</center></h1>

	<div class="jumbotron">
		<div class="map_container"> 
			<div id="map" class="gmaps4rails_map" style='width: 100%; height: 400px;'>
			</div> 
		</div>
		<script>
		handler = Gmaps.build('Google');
		handler.buildMap({ provider: {scrollwheel: false, zoomControl: false}, internal: {id: 'map'}}, function(){
			markers = handler.addMarkers(<%=raw @hash.to_json %>);
			handler.bounds.extendWith(markers);
			handler.fitMapToBounds();
		});
		</script>
	</div>

	<div class="table">
		<% @listings.each do |x| %>
		<div class="col-md-4">
			<%= link_to listing_path(x) do %>
			<div class="card">
				<div class="card-image">
					<div class="card-title">
						<%= x.bedrooms %> bedroom / <%= x.bathrooms %> bathroom for $<%= x.price %>/mo in <%= x.address.split(",")[0] %>
					</div>
					<%= image_tag(x.images[1],:class => "style_image") %>
				</div>

				<div class="card-content">
					<!%= link_to x.external_url %>
				</div>

				<div class="card-action">
					<div class="icon-preview"><i class="mdi-action-trending-neutral"></i><span><%= x.heading %></span></div>
					<div class="icon-preview"><i class="mdi-social-location-city"></i> <span><%= truncate(x.body, :length => 90) %> </span></div>
				</div>
			</div>
		</div>
		<% end %>
		<% end %>






